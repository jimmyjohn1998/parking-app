<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tf_staff.parkemlandscape.app_user.NavigationEntities.AppUserProfileActivity"
    tools:showIn="@layout/app_bar_user_profile">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Username"
            android:background="@drawable/roundtext"
            android:id="@+id/user_username_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:padding="10dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Password"
            android:padding="10dp"
            android:background="@drawable/roundtext"
            android:id="@+id/user_password_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Name"
            android:padding="10dp"
            android:background="@drawable/roundtext"
            android:id="@+id/user_name_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Email"
            android:padding="10dp"
            android:background="@drawable/roundtext"
            android:id="@+id/user_email_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Phone Number"
            android:padding="10dp"
            android:background="@drawable/roundtext"
            android:id="@+id/user_phone_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_marginTop="15dp"
        android:background="@drawable/roundbutton"
        android:textSize="15dp"
        android:id="@+id/buttonUpdateUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textStyle="bold"
        android:textColor="#616161"
 />
</LinearLayout>

