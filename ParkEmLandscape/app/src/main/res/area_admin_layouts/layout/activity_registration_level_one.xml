<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000">

    <EditText
        android:id="@+id/register_parking_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="PARKING NAME"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/roundtext"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/register_username_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/register_parking_name_editText"
        android:layout_below="@+id/register_parking_name_editText"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="USERNAME"
        android:gravity="center"
        android:padding="10dp"

        android:background="@drawable/roundtext"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/register_password_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:gravity="center"      android:padding="10dp"

        android:background="@drawable/roundtext"
        android:inputType="textPassword"
        android:layout_below="@+id/register_username_editText"
        android:layout_alignStart="@+id/register_username_editText" />

    <EditText
        android:id="@+id/register_emailid_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:ems="10"
        android:hint="EMAIL ID"        android:padding="10dp"

        android:background="@drawable/roundtext"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/register_password_editText"
        android:layout_alignStart="@+id/register_password_editText" />

    <EditText
        android:id="@+id/register_ph_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/register_emailid_editText"
        android:layout_below="@+id/register_emailid_editText"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:ems="10"
        android:hint="MOBILE NUMBER"        android:padding="10dp"

        android:background="@drawable/roundtext"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="450dp">

        <Button
            android:id="@+id/register_proceed_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_ph_editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="PROCEED"
            android:textStyle="bold"
            android:textColor="#616161"
            android:textSize="17dp"
            android:background="@drawable/roundbutton"
            android:onClick="proceed" />

        <Button
            android:id="@+id/register_reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_ph_editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="reset"
            android:textStyle="bold"
            android:textColor="#616161"
            android:textSize="17dp"
            android:background="@drawable/roundbutton"
           />
    </LinearLayout>



</RelativeLayout>